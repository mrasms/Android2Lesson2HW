<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C70D5"
    android:padding="12dp"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <GridLayout
        android:id="@+id/dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6C70D5"
        android:orientation="horizontal"
        android:paddingHorizontal="43dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/im_dot1"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_columnWeight="1"
            android:layout_gravity="left"
            android:layout_margin="27dp"
            tools:src="@drawable/default_dot" />

        <ImageView
            android:id="@+id/im_dot2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_columnWeight="2"
            android:layout_gravity="center"
            android:layout_margin="27dp"
            tools:src="@drawable/default_dot" />

        <ImageView
            android:id="@+id/im_dot3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_columnWeight="1"
            android:layout_gravity="right"
            android:layout_margin="27dp"
            tools:src="@drawable/default_dot" />
    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        android:paddingHorizontal="34.5dp"
        android:text="Дальше"
        android:textAllCaps="false"
        android:textColor="#6C70D5"
        android:textSize="24sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>